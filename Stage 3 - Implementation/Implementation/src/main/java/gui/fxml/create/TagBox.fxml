         <padding>
            <Insets bottom="2.5" left="10.0" right="10.0" top="2.5" />
         </padding>
         <styleClass>
            <String fx:value="context-menu" />
            <String fx:value="text-center" />
         </styleClass>
      </ComboBox>
      <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButton" onMouseEntered="#onHoverEnter" onMouseExited="#onHoverExit" style="-fx-font-size: 12; -fx-padding: 3 6 3 6;" text="X">
         <font>
            <Font size="14.0" />
         </font>
         <styleClass>
            <String fx:value="btn-danger" />
            <String fx:value="btn-sm" />
         </styleClass></Button>
   </children>
</HBox>
