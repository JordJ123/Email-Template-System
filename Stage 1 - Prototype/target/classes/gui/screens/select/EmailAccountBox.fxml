<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="emailAccountBox" alignment="CENTER" onMouseClicked="#onSelectHBox" spacing="10.0" style="-fx-border-width: 1; -fx-border-color: black;" stylesheets="@/org/kordamp/bootstrapfx/bootstrapfx.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.screens.select.EmailAccountBoxController">
   <children>
      <Label fx:id="emailAddressLabel" style="-fx-font-size: 14;" text="Email Address" />
      <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogoutButton" style="-fx-font-size: 14;" text="Logout">
         <styleClass>
            <String fx:value="btn-sm" />
            <String fx:value="btn-danger" />
         </styleClass>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
