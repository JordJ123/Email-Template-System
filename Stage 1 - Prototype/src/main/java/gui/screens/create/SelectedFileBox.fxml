<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="selectedFileBox" alignment="CENTER" spacing="5.0" stylesheets="@/org/kordamp/bootstrapfx/bootstrapfx.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.screens.create.SelectedFileBoxController">
   <children>
      <Hyperlink fx:id="filePathHyperLink" onAction="#onFilePathHyperlink" style="-fx-border-width: 0px;" text="Hyperlink">
         <padding>
            <Insets bottom="4.0" top="4.0" />
         </padding>
         <font>
            <Font size="14.0" />
         </font>
      </Hyperlink>
      <Button fx:id="removeButton" mnemonicParsing="false" onAction="#onRemoveButton" text="X">
         <padding>
            <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
         </padding>
         <font>
            <Font size="14.0" />
         </font>
         <styleClass>
            <String fx:value="btn-sm" />
            <String fx:value="btn-danger" />
         </styleClass>
      </Button>
   </children>
</HBox>
